# =============================================================================
# AI-Driven Citation & Quotation Optimizer - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values

# Required: Google Gemini API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_google_api_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Gemini Model Version (default: gemini-2.5-flash)
# Options: gemini-1.5-pro, gemini-2.5-flash, gemini-1.5-flash
# Pro models are more capable but slower and more expensive
GEMINI_MODEL=gemini-2.5-flash

# AI Response Temperature (0.0-1.0, default: 0.3)
# 0.0 = Very focused and deterministic
# 0.3 = Balanced (recommended)
# 0.7 = More creative but less consistent
# 1.0 = Maximum creativity
GEMINI_TEMPERATURE=0.3

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum content length from URLs (default: 5000)
# Increase for longer articles, decrease for faster processing
MAX_URL_CONTENT_LENGTH=5000

# Batch size for sentence processing (default: 16)
# Higher = faster but more memory usage
SENTENCE_BATCH_SIZE=16

# Number of top sentences to extract (default: 3)
# More sentences = better context but slower processing
TOP_SENTENCES_COUNT=3

# Minimum sentence length for processing (default: 8)
# Filters out very short sentences
MIN_SENTENCE_LENGTH=8

# =============================================================================
# BENCHMARKING SETTINGS
# =============================================================================

# Default sample size for benchmarks (default: 10)
# Increase for more comprehensive testing (but slower)
BENCHMARK_SAMPLE_SIZE=10

# Dataset name for benchmarking
BENCHMARK_DATASET=GEO-Optim/geo-bench

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default architecture mode: OOP or Legacy (default: OOP)
DEFAULT_ARCHITECTURE=OOP

# Enable legacy compatibility mode (default: true)
ENABLE_LEGACY_MODE=true

# Enable OOP mode (default: true)  
ENABLE_OOP_MODE=true

# Streamlit page layout (default: wide)
# Options: centered, wide
PAGE_LAYOUT=wide

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# DEBUG = Very verbose, INFO = Normal, WARNING = Minimal
LOG_LEVEL=INFO

# Enable performance timing logs (default: true)
# Shows how long each operation takes
ENABLE_TIMING_LOGS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode for development
DEBUG_MODE=false

# Enable verbose logging for troubleshooting
VERBOSE_LOGGING=false

# Cache model instances for better performance (recommended: true)
CACHE_MODELS=true
